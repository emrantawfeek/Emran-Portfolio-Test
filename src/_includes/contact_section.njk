<!--==================== CONTACT ME ====================-->
<section class="contact section" id="contact">
  <h2 class="section__title grow">Contact Me</h2>
  <span class="section__subtitle">Get in touch</span>

  <div class="contact__container container grid">
    <div>
      <div class="contact__information">
        <i class="uil uil-phone contact__icon"></i>

        <div>
          <h3 class="contact__title">Call Me</h3>
          <span class="contact__subtitle">+90 553 834 9679</span>
        </div>
      </div>

      <div class="contact__information">
        <i class="uil uil-envelope contact__icon"></i>

        <div>
          <h3 class="contact__title">Email</h3>
          <span class="contact__subtitle">3mran.work@gmail.com</span>
        </div>
      </div>

      <div class="contact__information">
        <i class="uil uil-map-marker contact__icon"></i>

        <div>
          <h3 class="contact__title">Location</h3>
          <span class="contact__subtitle">Turkey - Ä°stanbul</span>
        </div>
      </div>
    </div>

    <form
      name="Contact-Me"
      method="POST"
      class="contact__form grid"
      data-netlify="true"
      action="/messagesent.html"
    >
      <div class="contact__inputs grid">
        <div class="contact__content">
          <label for="" class="contact__label"
            >Name
            <input
              type="text"
              name="name"
              class="contact__input"
              id="inputName"
          /></label>
        </div>
        <div class="contact__content">
          <label for="inputEmail" class="contact__label"
            >Email
            <input
              type="email"
              name="email"
              class="contact__input"
              id="inputEmail"
          /></label>
        </div>
      </div>
      <div class="contact__content">
        <label for="" class="contact__label"
          >Subject
          <input
            type="text"
            name="subject"
            class="contact__input"
            id="inputSubject"
        /></label>
      </div>
      <div class="contact__content">
        <label for="" class="contact__label"
          >Message
          <textarea
            name="message"
            id="inputMsg"
            cols="0"
            rows="7"
            class="contact__input"
          ></textarea>
        </label>
      </div>
      <div>
        <button type="submit" class="submit--button">
          Send Message
          <i class="uil uil-message submit--button-icon button__icon"></i>
        </button>
      </div>
    </form>
  </div>
</section>
