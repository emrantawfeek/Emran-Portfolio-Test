<!--==================== ABOUT ====================-->
{%- for aboutme in collections.aboutme -%}

<section class="about section" id="about">
  <h2 class="section__title grow">About Me</h2>
  <span class="section__subtitle">My introduction</span>
  <div class="about__container container grid">
    <img src="{{ aboutme.data.image }}" alt="" class="about__img" />
    <div class="about__data">
      <p class="about__description">
        {{ aboutme.data.description }}
      </p>
      <div class="about__info">
        <div>
          <span class="about__info-title"
            >{{ aboutme.data.yearsExperience }}+</span
          >
          <span class="about__info-name"
            >Years <br />
            experience</span
          >
        </div>
        <div>
          <span class="about__info-title"
            >{{ aboutme.data.completedProjects }}+</span
          >
          <span class="about__info-name"
            >Completed <br />
            project</span
          >
        </div>
        <div>
          <span class="about__info-title"
            >{{ aboutme.data.companiesWorked }}+</span
          >
          <span class="about__info-name"
            >Companies <br />
            worked</span
          >
        </div>
      </div>
      <div class="about__buttons">
        <a download="" href="{{ aboutme.data.pdf }}" class="button button--flex"
          >Download CV<i class="uil uil-download-alt button__icon"></i
        ></a>
      </div>
    </div>
  </div>
</section>
{%- endfor %}
